<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:weightSum="1" 
    android:background="#FFFFFF">


         <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="60dp" 
    android:id="@+id/upload_items"
    >
    <ImageView 
        android:id="@+id/branditemtype_img"
        android:layout_height="58dp"
        android:layout_width="wrap_content"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:padding="2dp"
        android:layout_marginRight="5dp"
        />
    
    
    <TextView 
        android:id="@+id/branditemcolor_txt"
        android:layout_height="30dp"
        android:layout_width="80dp"
		android:textSize="20dp"
		android:layout_toRightOf="@id/branditemtype_img"
		android:layout_alignParentTop="true"
		android:textColor="#000000"
        />
     <TextView 
        android:id="@+id/branditembrand_txt"
        android:layout_height="30dp"
        android:layout_width="wrap_content"
		android:textSize="20dp"
		android:layout_toRightOf="@id/branditemtype_img"
		android:layout_below="@id/branditemcolor_txt"
		android:textColor="#000000"
        />
     
     
      <TextView 
        android:id="@+id/branditemprice_txt"
        android:layout_height="30dp"
        android:layout_width="wrap_content"
		android:textSize="20dp"
		android:layout_toRightOf="@id/branditemcolor_txt"
		android:layout_alignParentTop="true"
		android:textColor="#000000"
        />
      </RelativeLayout>
        <ListView 
            android:id="@+id/branditem_Listview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="10dp"
    	      android:divider="#808080"
  			android:dividerHeight="1.0sp"
  			android:layout_below="@id/upload_items"
            ></ListView>

		
   		
	 <LinearLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:orientation="horizontal"
	     android:layout_below="@id/branditem_Listview"
	     >
        <Button
             android:layout_width="0dp"
    		android:layout_height="wrap_content"
    		android:layout_centerVertical="true"
    		android:text="SKIP"
    		android:layout_weight="0.1"
    		android:id="@+id/branditemSkip"
            android:background="#008B8B"
            android:layout_margin="5dp"
            ></Button>
        <Button
             android:layout_width="0dp"
    		android:layout_height="wrap_content"
    		android:layout_centerVertical="true"
    		android:text="SAVE"
    		android:layout_weight="0.1"
    		android:id="@+id/BranditemOK"
    		android:background="#0ABAB5"
    		android:layout_margin="5dp"
            ></Button>
    </LinearLayout>
</RelativeLayout>
