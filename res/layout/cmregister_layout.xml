<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cmregister_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:weightSum="3"
  	
    >
    <RelativeLayout
        android:id="@+id/welcomeLayout"
         android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:background="#72D3D1"
        	    >
       <ImageView
        	    android:id="@+id/welcome"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:src="@drawable/opening"
        	    
        	    android:adjustViewBounds="true"
        	    android:background="#72D3D1"
        	    />
	    <com.google.android.gms.common.SignInButton
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="100dp"
	    android:id="@+id/sign_in_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    
	    />
    
    
    </RelativeLayout>
  
           
    
    <!-- The main content view -->
 	
    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical" >
        
    </LinearLayout>
 
    <!-- The navigation drawer -->
 
    <LinearLayout
        android:baselineAligned="false"
        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal"
        android:background="#1C1C1C" 
        android:layout_weight="2"
        android:weightSum="4"
    >
        <LinearLayout 
            android:id="@+id/homenav"
            android:layout_width="0dp"
       		 android:layout_height="wrap_content"
       		 android:layout_weight="1"
       		 android:orientation="vertical"
       		 android:weightSum="1"
       		 android:background="#000000" 
           >

           
        	<ImageView
        	    android:id="@+id/home"
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_margin="5dp"
        	    android:padding="5dp"
        	    android:layout_weight="2.99"
        	    android:src="@drawable/home" />
           
        	<TextView
        	   	  android:id="@+id/homeText"
		 	    android:layout_width="match_parent"
		 	   
		 	    android:layout_height="5dp"
		 	    android:layout_weight="0.1"
		 	    android:background="#0ABAB5"
		 	   
		 	    />
         </LinearLayout> 
       <LinearLayout 
          	 android:id="@+id/picturenav"
            android:layout_width="0dp"
       		 android:layout_height="match_parent"
       		 android:layout_weight="1"
       		 android:orientation="vertical"
       		 android:weightSum="1"
           >

           
        	<ImageView
        	    android:id="@+id/picture"
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_margin="5dp"
        	    android:padding="5dp"
        	    android:layout_weight="2.99"
        	    android:src="@drawable/takephoto" />
           
        	<TextView
        	   	  android:id="@+id/pictureText"
		 	    android:layout_width="match_parent"
		 	   
		 	    android:layout_height="5dp"
		 	    android:layout_weight="0.01"
		 	    android:layout_marginBottom="0dp"
		 	    />
        	
       </LinearLayout> 
        <LinearLayout 
            android:id="@+id/searchnav"
            android:layout_width="0dp"
       		 android:layout_height="wrap_content"
       		 android:layout_weight="1"
       		 android:orientation="vertical"
       		 android:weightSum="1"
           >

           
        	<ImageView
        	    android:id="@+id/search"
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_margin="5dp"
        	    android:padding="5dp"
        	    android:layout_weight="2.99"
        	    android:src="@drawable/search" />
           
        	<TextView
        	   	  android:id="@+id/searchText"
		 	    android:layout_width="match_parent"
		 	   
		 	    android:layout_height="5dp"
		 	    android:layout_weight="0.01"
		 	    />
        	 </LinearLayout> 
        <LinearLayout 
             android:id="@+id/morenav"
            android:layout_width="0dp"
       		 android:layout_height="wrap_content"
       		 android:layout_weight="1"
       		 android:orientation="vertical"
       		 android:weightSum="1"
           >
			
           
        	<ImageView
        	    android:id="@+id/more"
        	    android:layout_width="match_parent"
        	    android:layout_height="wrap_content"
        	    android:layout_margin="5dp"
        	    android:padding="5dp"
        	    android:layout_weight="2.99"
        	    android:src="@drawable/more" />
           
        	<TextView
        	   	android:id="@+id/moreText"
		 	    android:layout_width="match_parent"
		 	   
		 	    android:layout_height="5dp"
		 	    android:layout_weight="0.01"
		 	    />
        	 </LinearLayout> 
	 
	 	
    </LinearLayout>
 
</LinearLayout>