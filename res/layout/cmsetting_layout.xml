<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cmsetting_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 
    <!-- The main content view -->
 
    <LinearLayout
	        android:id="@+id/cmsetting_main_layout"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="#2f2f2f"
	        android:orientation="vertical"
	        android:weightSum="16"
      >
	      <LinearLayout 
	          android:id="@+id/cmSettinactionBar"
	          android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.7"
	            android:background="#0ABAB5"
	            android:orientation="horizontal"
	            android:weightSum="6"
	          >
     		 <ImageView
			 	    android:layout_margin="10dp"
			 	    android:id="@+id/back"
			 	    android:layout_width="0dp"
			 	    android:layout_height="wrap_content"
			 	    android:layout_weight="1"
			 	    android:src="@drawable/previous"
			 	    
			 	    
				/>   
				<RelativeLayout 
				    android:layout_width="0dp"
				 	   
				 	    android:layout_height="match_parent"
				 	    android:layout_weight="4"
				    >
				    <TextView  android:id="@+id/CMappTitle"
				 	    android:layout_width="wrap_content"
				 	    android:text="CMAPP"
				 	    android:layout_height="wrap_content"
				 	    android:layout_centerHorizontal="true"
				 	    android:layout_centerVertical="true"
				 	    android:textSize="25dp"
				 	    android:textColor="#FFFFFF"
				 	   
				 	    />
				    
				</RelativeLayout>
				
			  <ImageView
			 	    android:layout_margin="10dp"
			 	    android:id="@+id/rightbar"
			 	    android:layout_width="0dp"
			 	    android:layout_height="match_parent"
			 	    android:layout_weight="1"
			 	    android:src="@drawable/ok"
				/>   
		</LinearLayout>	     
          
      
        <RelativeLayout
             android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    	android:layout_weight="8"
		    	android:id="@+id/imageview"
		    	android:background="#373C38"
            >
            
            <ImageView
		    android:id="@+id/CMPhoto"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
			 android:layout_alignParentTop="true"
		    android:adjustViewBounds="true"
		  	android:src="@drawable/camera"
		  
	  	  ></ImageView>
          <ImageView
		    android:id="@+id/trash"
		    android:layout_width="50dp"
		    android:layout_height="50dp"
		    android:padding="5dp"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
		    android:adjustViewBounds="false"
		  	android:src="@drawable/trashcan"
		  
	  	  ></ImageView>

          

        </RelativeLayout>
        
        
	    <LinearLayout
        android:id="@+id/left_drawer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal"
        android:background="#373C38"
        android:layout_weight="0.6"
        android:weightSum="4"
        >
	       <LinearLayout 
	            android:layout_width="0dp"
	       		 android:layout_height="wrap_content"
	       		 android:layout_weight="1"
	       		 android:orientation="vertical"
	       		 android:weightSum="1"
	           >
          
		        	<ImageView
			 	    android:layout_margin="10dp"
			 	    android:id="@+id/shirt"
			 	    android:layout_width="match_parent"
			 	    android:layout_height="wrap_content"
			 	    android:layout_weight="1"
			 	    android:src="@drawable/tshirttag"
			 	    />   
			 	     <TextView 
		                
				 	    android:id="@+id/shirtText"
				 	    android:layout_width="match_parent"
				 	    android:gravity="bottom"
				 	    android:layout_height="5dp"
				 	    android:layout_weight="0.01"
				 	    android:background="#0ABAB5"
		               />
		       </LinearLayout>
		        
		       <LinearLayout 
		            android:layout_width="0dp"
		       		 android:layout_height="wrap_content"
		       		 android:layout_weight="1"
		       		 android:orientation="vertical"
		       		 android:weightSum="1"
		           >

	        	<ImageView
	        	    android:id="@+id/color"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="wrap_content"
	        	    android:layout_margin="10dp"
	        	    android:layout_weight="1"
	        	    android:src="@drawable/color" />
	           
	        	<TextView
	        	   	  android:id="@+id/colorText"
			 	    android:layout_width="match_parent"
			 	   
			 	    android:layout_height="5dp"
			 	    android:layout_weight="0.01"
			 	    
			 	    />
	        	
	       </LinearLayout> 
	       <LinearLayout 
	            android:layout_width="0dp"
	       		 android:layout_height="wrap_content"
	       		 android:layout_weight="1"
	       		 android:orientation="vertical"
	       		 android:weightSum="1"
	           >
          
		        	<ImageView
			 	    android:layout_margin="10dp"
			 	    android:id="@+id/brand"
			 	    android:layout_width="match_parent"
			 	    android:layout_height="wrap_content"
			 	    android:layout_weight="1"
			 	    android:src="@drawable/brand"
			 	    />   
			 	     <TextView 
		                
				 	    android:id="@+id/brandText"
				 	    android:layout_width="match_parent"
				 	    android:gravity="bottom"
				 	    android:layout_height="5dp"
				 	    android:layout_weight="0.01"
				 	    
		               />
		       </LinearLayout>
		        
		       <LinearLayout 
		            android:layout_width="0dp"
		       		 android:layout_height="wrap_content"
		       		 android:layout_weight="1"
		       		 android:orientation="vertical"
		       		 android:weightSum="1"
		           >

	        	<ImageView
	        	    android:id="@+id/price"
	        	    android:layout_width="match_parent"
	        	    android:layout_height="wrap_content"
	        	    android:layout_margin="10dp"
	        	    android:layout_weight="1"
	        	    android:src="@drawable/dollar" />
	           
	        	<TextView
	        	   	  android:id="@+id/priceText"
			 	    android:layout_width="match_parent"
			 	   
			 	    android:layout_height="5dp"
			 	    android:layout_weight="0.01"
			 	    
			 	    />
	        	
	       </LinearLayout> 
		 	
	    </LinearLayout>
        <LinearLayout
        android:id="@+id/bottom_listview"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_weight="6.8"
        android:orientation="horizontal" 
        android:background="#2f2f2f" >
	 	
	       <ListView 
	           android:id="@+id/selector"
	           android:layout_width="0dp"
	           android:layout_height="wrap_content"
	           android:layout_weight="1"
	           
	           ></ListView>
	       
   		 </LinearLayout>
   		 
    </LinearLayout>
 
    <!-- The navigation drawer -->
 
